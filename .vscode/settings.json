{
  "css.enabledLanguages": ["html", "hbs"],
  "css.styleSheets": [
    "node_modules/bootstrap/dist/css/bootstrap.css",
    "src/**/*.css",
    "src/**/*.scss"
  ],
  "files.associations": {
    "*.hbs": "html" // Keep this as "html" for CSS IntelliSense
  },
  "emmet.includeLanguages": {
    "handlebars": "html"
  },

  "[handlebars]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": null
  },
  // Add these to explicitly disable Prettier for .hbs
  "prettier.disableLanguages": ["handlebars"],
  "prettier.ignoreFiles": ["**/*.hbs"]
}
