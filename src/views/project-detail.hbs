<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="/assets/css/project-detail.css" />

    <!-- Poppins Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />

    <title>Project Detail</title>
  </head>
  <body>
    <div class="container-fluid bg-body-secondary px-0 pb-5">
      <!-- NAV BAR -->
      {{> navbar}}

      <!-- MAIN PAGE -->
       <div class="d-flex flex-column gap-4 mt-5 px-5 ">
        <h1 class="h3 fw-bold mx-auto">{{project.name}}</h1>
        <div class="d-flex gap-5 justify-content-center">
          <div style="width: 400px;">
            <img src="{{project.image}}" alt="Project demo" class="img-fluid rounded shadow">
          </div>
          <div>
            <div class="mb-4">
              <h2 class="h5">Duration</h2>
              <div class="d-flex flex-column gap-1">
                <div class="d-flex align-items-center gap-2">
                  <img src="/assets/icons/calendar-dots.svg" alt="calender" width="20" height="20">
                  <span>{{project.startDate}} - {{project.endDate}}</span>
                </div>
                <div class="d-flex align-items-center gap-2">
                  <img src="/assets/icons/clock.svg" alt="clock" width="20" height="20">
                  <span>{{project.durationLabel}}</span>
                </div>
              </div>
            </div>
            <div>
              <h2 class="h5">Technologies</h2>
              <div class="container text-center">
                <div class="row row-cols-2 g-3">
                  {{#each project.technologies}}
                    <div class="col d-flex align-items-center justify-content-start gap-3">
                      <img 
                        src="/assets/icons/{{this.icon}}" 
                        alt="{{this.name}}" 
                        width="25" 
                        height="25"
                      >
                      <span>{{this.name}}</span>
                    </div>
                  {{/each}}
                </div>
              </div>
            </div>
          </div>
        </div>
